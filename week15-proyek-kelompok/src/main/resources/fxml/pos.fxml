<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="1400.0" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.upb.agripos.controller.PosController">

    <top>
        <VBox style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 20 30 20 30; -fx-background-color: white;">
                <children>
                    <Label text="AGRI-POS" textFill="#10b981">
                        <font><Font name="System Bold" size="24.0" /></font>
                    </Label>
                    <Label text="/" textFill="#cbd5e1">
                        <font><Font name="System Bold" size="20.0" /></font>
                    </Label>
                    <Label text="KASIR" textFill="#64748b">
                        <font><Font name="System Bold" size="16.0" /></font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button onAction="#handleLogout" style="-fx-background-color: #fef2f2; -fx-text-fill: #dc2626; -fx-padding: 10 20 10 20; -fx-background-radius: 10; -fx-font-weight: bold; -fx-cursor: hand; -fx-border-color: #ef4444; -fx-border-width: 2; -fx-border-radius: 10;" text="← LOGOUT" />
                </children>
            </HBox>
            <Separator style="-fx-background-color: #e2e8f0; -fx-pref-height: 1;" />
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: transparent;">
        <SplitPane dividerPositions="0.35" style="-fx-background-color: transparent; -fx-padding: 25;">

            <VBox spacing="16.0" style="-fx-padding: 0; -fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 3); -fx-padding: 25;">
                <Label text="CARI PRODUK" textFill="#0f172a">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
                <Separator style="-fx-background-color: #e2e8f0; -fx-pref-height: 1;" />
                <TextField fx:id="txtCari" promptText="Ketik nama barang atau kode..." style="-fx-background-color: white; -fx-border-color: #cbd5e1; -fx-border-radius: 10; -fx-border-width: 1.5; -fx-font-size: 14px; -fx-padding: 14 16 14 16;" />

                <TableView fx:id="tblKatalog" VBox.vgrow="ALWAYS" style="-fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-border-width: 1; -fx-background-radius: 10;">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <placeholder>
                        <Label text="Produk tidak ditemukan" />
                    </placeholder>
                </TableView>
                <Label text="ℹ Double-click untuk menambah ke keranjang" textFill="#64748b" style="-fx-font-size: 12px;"/>
            </VBox>

            <BorderPane>
                <top>
                    <VBox spacing="16.0" style="-fx-padding: 25; -fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 3); -fx-margin: 0 0 20 0;">
                        <Label text="INPUT BARANG" textFill="#0f172a">
                            <font><Font name="System Bold" size="15.0" /></font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="14.0">
                            <TextField fx:id="txtKode" promptText="Kode barang atau scan barcode..." HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-border-color: #cbd5e1; -fx-border-radius: 10; -fx-border-width: 1.5; -fx-padding: 12 16 12 16; -fx-font-size: 13px;" />
                            <TextField fx:id="txtQty" prefWidth="75.0" text="1" style="-fx-background-color: white; -fx-border-color: #cbd5e1; -fx-border-radius: 10; -fx-border-width: 1.5; -fx-padding: 12 16 12 16; -fx-font-size: 13px; -fx-alignment: center;" />
                            <Button onAction="#handleAdd" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-padding: 12 24 12 24; -fx-background-radius: 10; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-size: 13px; -fx-effect: dropshadow(gaussian, rgba(16, 185, 129, 0.3), 8, 0, 0, 3);" text="+ TAMBAH" />
                        </HBox>
                        <VBox style="-fx-background-color: #fffbeb; -fx-padding: 20; -fx-background-radius: 12; -fx-border-color: #fbbf24; -fx-border-width: 1.5; -fx-border-radius: 12;">
                            <Label text="TOTAL BELANJA" textFill="#92400e" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-letter-spacing: 0.5;"/>
                            <Label fx:id="lblTotal" text="Rp 0" textFill="#d97706">
                                <font><Font name="System Bold" size="32.0" /></font>
                            </Label>
                        </VBox>
                    </VBox>
                </top>

                <center>
                    <VBox spacing="16.0" style="-fx-padding: 0 0 0 0;">
                        <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-padding: 0 25 0 25;">
                            <Label text="KERANJANG BELANJA" textFill="#0f172a">
                                <font><Font name="System Bold" size="15.0" /></font>
                            </Label>
                            <Region HBox.hgrow="ALWAYS" />
                            <Label fx:id="lblItemCount" style="-fx-background-color: #f0fdf4; -fx-text-fill: #10b981; -fx-padding: 6 12 6 12; -fx-background-radius: 8; -fx-font-size: 11px; -fx-font-weight: bold;" text="0 ITEM"/>
                        </HBox>
                        <TableView fx:id="tblCart" style="-fx-border-color: transparent; -fx-padding: 0 25 0 25; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                            <placeholder>
                                <Label text="Keranjang belanja kosong" />
                            </placeholder>
                        </TableView>
                    </VBox>
                </center>

                <bottom>
                    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 25; -fx-background-color: transparent;">
                        <Button onAction="#handleCheckout" prefHeight="60.0" prefWidth="320.0" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(16, 185, 129, 0.4), 12, 0, 0, 4);" text="BAYAR SEKARANG" />
                    </HBox>
                </bottom>
            </BorderPane>

        </SplitPane>
        </ScrollPane>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="4" style="-fx-padding: 12 30 12 30; -fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-width: 1 0 0 0;">
            <Label text="Agri-POS  •  Kelompok 1  •  3IKKA" textFill="#475569" style="-fx-font-size: 11px; -fx-font-weight: bold;"/>
            <Label text="Anggota: M.Rifqi An Naafi, Hari Cahyono, Inayah Fihanatin, Kavina Reyna Riyadi, Irwandi Isnugroho" textFill="#94a3b8" style="-fx-font-size: 10px;"/>
        </VBox>
    </bottom>

</BorderPane>